{% block scripts %}
  <!--build:js(./build) /2018/assets/js/slick.min.js -->
  <script type="text/javascript" src="/2018/assets/slick/slick.js"></script>
  <!--endbuild-->
  <script>
    $(document).ready(function(){
      // initiate slick slider
      $('.bm-slideshow-index').slick({
        autoplay: true,
        autoplaySpeed: 3000,
        fade: false,
        speed: 500,
        easing: 'swing',
        cssEase: 'cubic-bezier(0.645, 0.045, 0.355, 1)',
        arrows: false,
        lazyload: 'ondemand',
        mobileFirst: true,
        touchMove: true
      });

      /* look for data for timing on each slide in slideshows */
      var cs = $('.container-slideshow'),
          holdTime;
      cs.on('init',
        function(event, slick){
          holdTime = $('.slick-slide').get(0).dataset.time;
          cs.slick("setOption", "autoplaySpeed", holdTime)
        }
      );
      cs.on('afterChange',
        function(e, slick){
          var curr = cs.slick('slickCurrentSlide');
          holdTime = $('.slick-slide').get(curr).dataset.time;
          cs.slick("setOption", "autoplaySpeed", holdTime)
        }
      );
    });
  </script>
{% endblock %}