{% extends "layout.njk" %}

{% block headinsert %}
    {% include "partials/pswp_styles.njk" %}
{% endblock %}

{% set content_special_class %}gallery-page{% endset %}

{% block content %}
    <section>
      <div class="gallery category js-pswp_gallery" id="preview">

        {%- import "_images.njk" as images -%}

        {{ images.thmb(
          images='38',
          div_class='thmb-sm container-image',
          a_href_base='preview/2018-preview',
          a_title='2018 Content Preview',
          img_alt='2018 Content Preview', img_src_base='../images/preview/preview-thmb') }}

      </div>
    </section>

    {% include "partials/pswp.njk" %}

{% endblock %}
{% set slides_src %}preview-slides.js{% endset %}
{% block scripts %}{% include "partials/pswp_scripts.njk" %}{% endblock %}