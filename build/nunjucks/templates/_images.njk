{% macro thmb(images, div_class, a_href_base, a_title, img_alt, img_src_base) %}
  {%- set n %}{{ images | int + 1 }}{% endset -%}
  {%- for i in range(1, n) -%}
    {%- if i < 10 -%}
      {%- set int %}0{{i}}{% endset -%}
    {%- else -%}
      {%- set int %}{{i}}{% endset -%}
    {%- endif -%}
    {%- set a_href %}{{a_href_base}}-{{int}}{% endset %}
    {% set image_path %}{{img_src_base}}-{{int}}{% endset %}
        <div class="{{ div_class }}">
          <a href="http://localhost:7000/city/{{ a_href }}.html" title="{{ a_title }}">
            <img alt="{{ img_alt }}"
            {% include "partials/ri-thmb.njk" %}>
          </a>
        </div>
  {%- endfor -%}
{%- endmacro -%}