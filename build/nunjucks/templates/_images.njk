{% macro thmb(gallery_images, div_class) %}

  {%- for img in gallery_images %}
        <div class="{{ div_class }}">
          <a href="{{ img.image_pageHref }}" title="{{ img.exifData_caption }}">
            <picture>{%set image_path %}{{img.image_thmbPath}}{% endset %}
              <img alt="{{ img.image_altTag }}"
              {% include "partials/ri-thmb.njk" %}>
            </picture>
          </a>
        </div>
  {% endfor -%}

{%- endmacro -%}